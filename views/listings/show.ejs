<% layout("/layouts/boilerplate") %>

<div class="main">
    
    <div class="row mt-3">
       
        <div class="col-8 offset-2 mt-3">
            <h3> <%= listing.title %></h3>
        </div>
        <div class="card col-6 offset-2 mt-3 ">
            <div class="col-8">
            <img src="<%= listing.image.url %>"
             class="card-img-top show-img" alt="...">
            </div>
            <div class="card-body mt-4">
                <p class="text">
                    <b><%= listing.title %></b>
                    <br>
                    <%= listing.description %>
                    <br>
                     price : <%= listing.price %>
                    <br>
                    Location : <%= listing.location %>
                </p>
            </div>
        </div>
         

    <br>
   
</div>
<div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit </a>

    <form  method="post" action="/listings/<%= listing._id %>?_method=delete" ></form> 
        <button class="btn btn-dark offset-1">delete</button>
    </form>
</div>

</div>


 